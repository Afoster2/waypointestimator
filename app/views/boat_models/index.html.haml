%h1.p-10 Boat Models

%table.table-auto.w-full
  %thead
    %tr
      %th.px-4.py-2 Name
      %th.px-4.py-2 Stock Number
      %th.px-4.py-2 Length
      %th.px-4.py-2 Max HP
      %th.px-4.py-2 Price of Hull Only
      %th.px-4.py-2 Price with Trailer & Hull
  %tbody
    - @boat_models.each do |boat_model|
      %tr
        %td.px-4.py-2
          = link_to boat_model do
            = boat_model.name
            = boat_model.style
        %td.px-4.py-2= boat_model.stock_number
        %td.px-4.py-2= boat_model.length
        %td.px-4.py-2= boat_model.max_hp
        %td.px-4.py-2
          = number_to_currency(boat_model.price_hull) 
        %td.px-4.py-2
          = number_to_currency(boat_model.price_trailer_hull)
        %td.px-0.py-2
          = link_to 'Edit', edit_boat_model_path(boat_model), class: 'ml-3 bg-blue-500 text-white px-14 py-2 no-underline'

.w-full.p-4
  = link_to 'New Boat Model', new_boat_model_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline no-underline'
