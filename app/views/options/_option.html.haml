%div{:id => "#{dom_id option}"}
  - if action_name != "show"
    = link_to "Show this option", option, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    = link_to 'Edit this option', edit_option_path(option), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"
    %hr.mt-6/
